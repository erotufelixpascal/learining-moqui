<?xml version="1.0" encoding="UTF-8"?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.0.xsd">

    <entity name="Tutorial" package="org.moqui.myproject">
        <field name="tutorialId" type="id" is-pk="true"/>
        <field name="title" type="text-medium"/>
        <field name="description" type="text-long"/>
        <field name="createdDate" type="date-time" default="now"/>
        
        <index name="TUTORIAL_TITLE_IDX">
            <index-field name="title"/>
        </index>
    </entity>
</entities>